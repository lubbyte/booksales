SHELL := /bin/bash

# ==============================================================================

# ==============================================================================
# Module support

tidy:
	go mod tidy
	go mod vendor

# ==============================================================================
# Running the API

run:
	go run api/sales/main.go

# ==============================================================================
# Running tests within the local computer

test:
	go test -count=1 ./...
	staticcheck -checks=all ./...
	govulncheck ./...

# ==============================================================================	
